  <div class="field pt-2">
    <%= form.label :"市区町村" %>
    <%= form.text_field :city,{placeholder: "（例）〇〇市〇〇区"} %>
  </div>

  <div class="field pt-2">
    <%= form.label :"以下の住所" %>
    <%= form.text_field :address %>
  </div>

  <div class="field pt-2">
    <%= form.label :"URL" %>
    <%= form.text_field :url, {placeholder: "http://www.******.com"} %>
  </div>

  <div class="field pt-2">
    <%= form.label :"電話番号（ハイフンなし）" %>
    <%= form.phone_field :tell_num %>
  </div>

  <div class="field pt-2">
    <%= form.label :shop_image %>
    <%= form.file_field :shop_image %>
  </div>

  <div class="field pt-2">
    <!-- 開始時間と終了時間を両方 -->
    <%= form.label :"営業開始時間" %>
    <%= form.time_field :start_time, {value: "11:00"}%>
    <%= form.label :"営業終了時間" %>
    <%= form.time_field :end_time, {value: "23:00"} %>

  </div>

  <div class="field pt-2">
    <%= form.label :"定休日" %>
    <p><%= form.text_field  :holidays,{placeholder: "(例)第３月曜日"} %></p>
</table>

