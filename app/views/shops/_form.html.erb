        <td><%= form.check_box :sockets, {checked_value: "1", unchecked_value: "0"}%>電源有り</td>
        <td><%= form.check_box :non_smorker, {checked_value: "1", unchecked_value: "0"}%>完全禁煙</td>
      </tr>
      <tr>
        <td><%= form.check_box :smorker, {checked_value: "1", unchecked_value: "0"}%>喫煙可</td>
        <td><%= form.check_box :mid_night, {checked_value: "1", unchecked_value: "0"}%>深夜営業</td>
        <td><%= form.check_box :close_from_station, {checked_value: "1", unchecked_value: "0"}%>駅チカ</td>
      </tr>
      <tr>
        <td><%= form.check_box :parking, {checked_value: "1", unchecked_value: "0"}%>駐車場有り</td>
        <td><%= form.check_box :co_working, {checked_value: "1", unchecked_value: "0"}%>コワーキングスペース</td>
        <td><%= form.check_box :printer, {checked_value: "1", unchecked_value: "0"}%>プリンター 有り</td>
      </tr>
    </table>

  </div>

  <div class="actions text-center py-2">
    <%= form.submit :新規登録,class: "btn btn-primary" %>
  </div>
