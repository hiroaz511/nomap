<!DOCTYPE html>
<html>
  <head>
    <title>Nomap</title>
    <meta  name="viewport" content="width=device-width">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
  </head>

  <body class="m-0">
    <% if flash[:notice] %>
    <div class="alert alert-success text-center">
      <%= flash[:notice] %>
    </div>
    <% end %>
    <nav class="navbar navbar-expand-md navbar-light bg-light sticky-top">
      <a class="navbar-brand" href="/"><strong>Nom@p</strong></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <form class="form-inline my-2 my-lg-0 ml-4">
          <input class="form-control mr-sm-2" type="search" placeholder="【例】渋谷・新宿" aria-label="Search">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">検索</button>
        </form>
        <ul class="navbar-nav ml-auto mr-5">
          <% if session[:user_id] %>
          <li class="nav-item"><%= link_to '店舗一覧', shops_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to '店舗登録', new_shop_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to 'サイト概要', new_shop_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to 'マイページ', "/users/#{session[:user_id]}", class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to 'ログアウト', logout_path, class: 'nav-link' %></li>
          <% else %>
          <li class="nav-item"><%= link_to 'ログイン', login_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to '新規登録', signup_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to '店舗一覧', shops_path, class: 'nav-link' %></li>
          <% end %>
        </ul>
      </div>
    </nav>
<%= yield %>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js" integrity="sha384-xrRywqdh3PHs8keKZN+8zzc5TX0GRTLCcmivcbNJWm2rs5C8PRhcEn3czEjhAO9o" crossorigin="anonymous"></script>
  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAo9eZhYGGcvwPThig1YlxctkQsXyZCAnY&callback=initMap"></script>

  <script src="/assets/jquery.raty.js"></script>
    <script>
      jQuery(document).ready(function(){
         $('#stars').raty({
           scoreName: 'review[rate]',
           space:       true,
           cancelOff: '/assets/cancel-off.png',
           cancelOn: '/assets/cancel-on.png',
           starOff:  '/assets/star-off.png',
           starOn : '/assets/star-on.png',
           // starHalf: '/assets/star-half.png',
           // half:        true,
           // halfShow:    true,
         });
       });
    </script>
  </body>
</html>
